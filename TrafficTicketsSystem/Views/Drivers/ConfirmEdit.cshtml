
@{
    ViewBag.Title = "Confirm Driver Edit";
}

<h2 class="maroon common-font text-center bold">Confirm Driver Edit</h2>

<hr />

@using (Html.BeginForm("Edit", "Drivers", FormMethod.Post))
{
    <div class="containment">
        <div class="small-content common-font">
            <table>
                <tr>
                    <td class="small-text bold maroon">Drv. Lic. #</td>
                    <td>@Html.TextBox("DrvLicNumber", @ViewBag.DrvLicNumber as string, htmlAttributes: new { @class = "form-control large-text" })</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td></td>
                </tr>
                <tr>
                    <td class="maroon bold">First Name</td>
                    <td>@Html.TextBox("FirstName", @ViewBag.FirstName as string, htmlAttributes: new { @class = "form-control large-text" })</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td></td>
                </tr>
                <tr>
                    <td class="maroon bold">Last Name</td>
                    <td>@Html.TextBox("LastName", @ViewBag.LastName as string, htmlAttributes: new { @class = "form-control large-text" })</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td></td>
                </tr>
                <tr>
                    <td class="maroon bold">Address</td>
                    <td>@Html.TextBox("Address", @ViewBag.Address as string, htmlAttributes: new { @class = "form-control large-text" })</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td></td>
                </tr>
                <tr>
                    <td class="small-text bold maroon">City</td>
                    <td>@Html.TextBox("City", @ViewBag.City as string, htmlAttributes: new { @class = "form-control large-text" })</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td></td>
                </tr>
                <tr>
                    <td class="maroon bold">County</td>
                    <td>@Html.TextBox("County", @ViewBag.County as string, htmlAttributes: new { @class = "form-control large-text" })</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td></td>
                </tr>
                <tr>
                    <td class="maroon bold">State</td>
                    <td>@Html.TextBox("State", @ViewBag.State as string, htmlAttributes: new { @class = "form-control large-text" })</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td></td>
                </tr>
                <tr>
                    <td class="maroon bold">ZIP Code</td>
                    <td>@Html.TextBox("ZIPCode", @ViewBag.ZIPCode as string, htmlAttributes: new { @class = "form-control large-text" })</td>
                </tr>
            </table>
        </div>
    </div>

    <hr />

    <p class="text-center"><input type="submit" value="Save/Update Driver Record" class="btn btn-warning" /></p>
    <div class="form-group">
        <label class="col-md-6 control-label"></label>
        <div class="col-md-6">

        </div>
    </div>
}

<hr />

<p class="text-center">
    @Html.ActionLink("Drivers - Vehicles Owners", "Index") ::
